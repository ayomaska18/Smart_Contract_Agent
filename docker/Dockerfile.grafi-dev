FROM python:3.13-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs

RUN pip install uv

ENV UV_SYSTEM_PYTHON=1
ENV UV_NO_CACHE=1
ENV UV_NO_PIP=1

COPY pyproject.toml uv.lock ./

RUN rm -rf /app/.venv

RUN uv sync

RUN uv add grafi-dev

EXPOSE 8888

WORKDIR /app

COPY apps/backend/ ./backend/

# Default command - launch grafi-dev pointing to our assistant
CMD ["uv", "run", "grafi-dev", "./backend/agents/true_react_agent.py"]